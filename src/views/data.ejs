<h1 class="title has-text-centered has-text-gray pt-3">Weather Data</h1>

<div class="container sixty has-text-centered pb-6">
	<table class="table is-striped is-fullwidth">
		<thead>
			<tr>
				<th><abbr title="Timestamp">Time</abbr></th>
				<th><abbr title="Temperature">Temperature</abbr></th>
				<th><abbr title="Humidity">Humidity</abbr></th>
				<th><abbr title="Windspeed">Windspeed</abbr></th>
				<th><abbr title="Lightintensity">Lightintensity</abbr></th>
			</tr>
		</thead>
		<tbody>
			<% weatherdata.forEach((dp, index) => { %>
			<tr>
				<td><%= dp.created.split(" ")[1].split(".")[0].split(":").slice(0,2).join(":") %>
					<%= dp.created.split(" ")[0].split("-").reverse().join(".") %>
				</td>
				<td><%= dp.temperature %></td>
				<td><%= dp.humidity %></td>
				<td><%= dp.windspeed %></td>
				<td><%= dp.lightintensity %></td>
			</tr>
			<% }) %>
		</tbody>
		<tfoot>
			<tr>
				<th><abbr title="Timestamp">Time</abbr></th>
				<th><abbr title="Temperature">Temperature</abbr></th>
				<th><abbr title="Humidity">Humidity</abbr></th>
				<th><abbr title="Windspeed">Windspeed</abbr></th>
				<th><abbr title="Lightintensity">Lightintensity</abbr></th>
			</tr>
		</tfoot>
	</table>
</div>